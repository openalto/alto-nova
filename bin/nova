#!/usr/bin/env python3

import sys
import json
from nova.converter import resource_query_transform

if '__main__' == __name__:
    if len(sys.argv) < 2:
        print("Usage: nova <json-string>")
        sys.exit(0)
    # TODO: Error handling
    print(json.dumps(resource_query_transform(json.loads(sys.argv[1]))))
